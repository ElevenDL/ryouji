.content select {
	color: white;
	background: #34363a;
}

footer {
	background: #262626;
}

.bottom-bar {
	background: black !important;
}

.label {
	color: white !important;
}

.control .checkbox:hover {
	color: #9790a2 !important;
}

.control .checkbox strong {
