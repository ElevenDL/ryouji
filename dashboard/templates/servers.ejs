header {
	background: #1d1f21 !important;
}

#menu {
	background: #1d1f21 !important;
}

#menu .menu ul li a:hover,
#menu .menu ul li span:hover {
	background: #35373b;
}

.content .textarea {
	background: #34363a !important;
	color: white !important;
	border: 1px solid black !important;
}

.content select {
	background: #34363a !important;
	color: white !important;
	border: 1px solid black !important;
}

.maincon .button {
	filter: invert(1) !important;
}

#bot-details-page .bot-name {
	color: gainsboro !important;
}

#createdby {
	color: grey !important;
}

.content a:hover {
	color: #334dad !important;
}

.darkthemeee h1 {
	color: white !important;
}

.darkthemeee h4 {
	color: white !important;
}

.headerDiv {
 background-color: #18191C; 
 width: 100%;
 height: 400px;
 margin-top: -40px;
}

.headerImage {
 margin-left: 70px;
}

.headerTextDescription {
 color: white;
 width: 640px; 
 margin-left: 200px;
 margin-top: -40px;
 font-size: 17px;
 word-break: normal;
}

.textFeatured {
 color: 7289DA;
}
    
	</style>
<div class="headerDiv">
  <img class="headerImage" src="https://eleven.sirv.com/ryouji/BANNER_SERVIDORES.png">
  <p class="headerTextDescription">
    Lista de servidores do <span class="textFeatured">Ryouji</span>. Aqui estão <span class="textFeatured"><%= bot.guilds.size%></span> em que o <span class="textFeatured">Ryouji</span> está.
  </p>
</div>

<div class="container">
	<br>
	<div id="guild-list-default">
		<div class="bot-list-section">
			<ul class="columns is-multiline is-tablet">
				<% 
bot.guilds.forEach(guild => {
  
%>
<% if(guild.id !== '1') { %>
				<li class="column bot-card is-one-quarter" style="opacity: 1; transform: translateY(0px);">
					<% if(guild.id == '391269244274212866' ||  guild.id == '460314108697378826'  || guild.id == '475397487608463361' || guild.id == '476419152320528409') { %>
					<div class="content partnered" style="border-style: solid;border-width: 1px 1px 1px 1px;border-color: #ff870f;">
						<% } else {%>
						<div class="content">
							<% } %>
							<div class="top is-flex"><span class="img-container">
									<div class="bot-img">
										<% if(guild.iconURL) {%>
										<img onload="" onclick="" style="cursor:pointer" alt="<%= guild.name %>" src="<%= guild.iconURL%>?size=512">
										<% } else {%>
										<img onload="" onclick="" style="cursor:pointer" alt="<%= guild.name%>" src="https://discordapp.com/assets/dd4dbc0016779df1378e7812eabaa04d.png">
										<% } %>
									</div>
								</span>
								<span class="stats">
									<br>
									<span class="servers btn btn-orange btn-1x">
										<%= guild.emojis.size%>
										Emojis
									</span>
									<span class="servers btn btn-orange btn-1x">
										<%= guild.memberCount%>
										Membros
									</span>
								</span>
							</div>
							<div class="info">
								<% if(guild.id == '391269244274212866' || guild.id == '460314108697378826' || guild.id == '475397487608463361' || guild.id == '476419152320528409') { %>
								<img src="https://cdn.glitch.com/4a4f105d-84dd-4709-8bfb-16428e054a2d%2Fcertified.svg?1529543784705" alt="" title="Servidor Certificado" width="14px"
								 height="14px" style="transform: translate(0px, 6px) scale(0.8);">
								<% } %>
								<p class="bot-name" style="color: WHITE;">
									<%= guild.name %>
								</p>
								<span class="lib">
									<%= guild.owner.user.tag %>
								</span>
							</div>
							<div onclick="" class="bottom is-flex bot-btns">
								<a style="font-size: 16px;" href="/servers/<%= guild.id%>"><span class="color-medium-blue btn">Ver</span></a>
							</div>
						</div>
				</li>
<% } %>
				<%
})
%>
			</ul>
		</div>
	</div>
	<br>
</div>
<% include ./blocks/footer %>