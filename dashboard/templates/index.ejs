<%- include('blocks/header', {bot: bot, user: user, auth: auth, stats: stats, dbl: dbl}) %>

<head>
    <meta name="theme-color" content="#23272A">
    <meta property="og:title" content="Ryouji Bot">
    <meta property="og:url" content="https://ryouji.glitch.me">
    <meta property="og:description" content="Um Bot com várias funções, comandos e muitas opções">
    <meta property="og:image" content="<%= bot.user.avatarURL %>?size=128">
    <link rel="stylesheet" type="text/css" href="public/servers/main.css">
    <title>
      WebSite in Tests - <%= bot.user.username %>
    </title>
<style>

  .it-in-mov {
    position: relative;
    -webkit-animation-name: moviment; /* Safari 4.0 - 8.0 */
    -webkit-animation-duration: 3s; /* Safari 4.0 - 8.0 */
    -webkit-animation-iteration-count: 1; /* Safari 4.0 - 8.0 */
    animation-duration: 9s;
    animation-iteration-count: infinite;
}

  .body-header-block {
   background: #18191C;
   margin-top: -21px;
   padding: 17%;
   border-style: solid;
   border-color: #7289da;
   border-width: 0px 0px 1px 0px
  }

  .body-header-text-title {
   font-family: 'Arial';
   font-size: 67px;
   color: white;
   margin-left: -135px;
  }

  .body-header-text-paragraph {
   font-family: 'Arial';
   font-size: 17px;
   color: white;
   margin-left: -155px;
  }

  .feat {
   font-family: 'Arial';
   font-size: 17px;
   color: #7289da;
  }

  .body-header-text-block {
   margin-top: -200px;
  }

  .headerButton {
   color: #7289da;
   background-color: #222;
  }

  .headerButton:hover {
   background-color: #191919;
  }

  .column {
   float: left;
   width: 25%;
   padding: 0 5px;
  } 

  .row {margin: 0 -5px;}
  /* Clear floats after the columns */
  .row:after {
   content: "";
   display: table;
   clear: both;
  }

/* Responsive columns */
@media screen and (max-width: 600px) {
  .column {
    width: 100%;
    display: block;
    margin-bottom: 10px;
  }
}

/* Style the counter cards */
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  padding: 16px;
  text-align: center;
  background-color: #18191C;
  color: white;
  transition: transform .4s;
}

.card:hover {
  margin: auto;
  max-width: 315px;
  transform: scale(1.09);
  box-shadow: 0 4px 8px 1px rgba(255, 255, 255, 0.02);
}

.card p {
 color: white;
}

.card h3 {
 color: #7289da;
}

.fa {font-size:50px;}

.content {
    margin: auto;
}

</style>
</head>

<body style="background-color: #202226">
  <div class="body-header-block">
   <div class="body-header-text-block">
     <h1 id="demo" class="body-header-text-title"></h1>
     <p class="body-header-text-paragraph">
        <span style="color: #18191C;">_</span>Um incrível bot que possue funções dentro do <span class="feat">WebSite</span> com Perfis, Informações sobre o Servidor, etc.
        E obviamente no <span class="feat">Discord</span> com vários comandos de música, roleplay, economia e cosméticos.
     </p>
   </div>
   <a class="btn btn-secondary headerButton it-in-mov" style="" href="https://discordapp.com/oauth2/authorize?client_id=452585205975351297&scope=bot&permissions=2113404159" target="_blank" role="button">Me Adicione »</a>
   <a class="btn btn-secondary headerButton it-in-mov" sytle="" href="https://www.patreon.com/ryouji" target="_blank" role="button">Patrocinar »</a>
   <a class="btn btn-secondary headerButton it-in-mov" sytle="" href="https://discordbots.org/bot/<%= bot.user.id %>/vote" target="_blank" role="button">UpVote DiscordBotsList »</a>
   <a class="btn btn-secondary headerButton it-in-mov" sytle="" href="https://bots.perfectdreams.net/bot/<%= bot.user.id %>/vote" target="_blank" role="button">UpVote PerfectDreams»</a>
  </div>
<br>
  <div class="row content container">
   <div class="column">
    <div class="card">
      <p><i class="fa fa-male"></i> <i class="fa fa-female"></i></p>
      <h3><%= stats.members%></h3>
      <p>Usuários</p>
    </div>
   </div>

   <div class="column">
    <div class="card">
      <p><i class="fa fa-server"></i></p>
      <h3><%= stats.guilds %></h3>
      <p>Servidores</p>
    </div>
   </div>
  
   <div class="column">
    <div class="card">
      <p><i class="fa fa-clock"></i></p>
      <h3><%= stats.uptime %></h3>
      <p>Tempo Acordado</p>
    </div>
   </div>
  
   <div class="column">
    <div class="card">
      <p><i class="fa fa-comment-alt"></i></p>
      <h3><%= stats.commands %></h3>
      <p>Comandos</p>
    </div>
   </div>
  </div>
<br>
  <div class="row content container">
   <div class="column">
    <div class="card">
      <p><i class="fa fa-angle-up"></i></p>
      <h3><%= dbl.points %></h3>
      <p>UpVotes</p>
    </div>
   </div>
   <div class="column">
    <div class="card">
      <p><i class="fa fa-angle-double-up"></i></p>
      <h3><%= dbl.monthlyPoints %></h3>
      <p>UpVotes Mensais</p>
    </div>
   </div>
   <div class="column">
    <div class="card">
      <p><i class="fa fa-list"></i></p>
      <h3><%= stats.channels %></h3>
      <p>Canais</p>
    </div>
   </div>
 </div>
 <br>
</body>

<script>

var i = 0;
var txt = "Bem-Vindo! - Estamos em Construção!";
var speed = 75;

function typeWriter() {
  if (i < txt.length) {
    document.getElementById("demo").innerHTML += txt.charAt(i);
    i++;
    setTimeout(typeWriter, speed);
  }
}

  $(window).on('load', function() {
	typeWriter()
  });

</script>