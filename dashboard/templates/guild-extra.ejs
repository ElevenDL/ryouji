<%- include('blocks/header', {bot: bot, user: user, auth: auth, guild:guild, bans: bans, invites}) %>
<head>
    <title><%= guild.name%> - <%= bot.user.username %></title>
</head>
<style>
	.banner {
	margin-top: 20px;
}

*.container img {
	position: absolute;
}

.headerimagee {
	z-index: 1;
}

.pfp {
	border-radius: 50%;
	position: absolute;
	top: 100px;
	margin: auto;
	margin-left: 20px;
	z-index: 1;
	width: 150px;
	height: 150px;
	-webkit-transition: all 0.4s;
	transition: all 0.4s;
	display: block;
}

.nametitle {
	position: absolute;
	top: 110px;
	margin: auto;
	margin-left: 180px;
	z-index: 1;

	-webkit-transition: all 0.4s;
	transition: all 0.4s;
	padding: 2px 5px;
	color: #fff;
	background-color: rgba(0, 0, 0, .8);
	line-height: 1.3;
}


div .btn-1x {
	color: #7187dd !important;
}

  .jumbotron {
    border-style: solid;
    border-width: 0px 0px 0px 5px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
   }

  .bans {
    color: #d63b3b;
   }

  .btn:hover {
    background-color: #6d7eba;
   }
      
		</style>
<body>
	<div class="container">
		<div style="width:100%;  height: 138px; margin: auto; margin-left: -150px;">
			<h1 class="nametitle">
	     <%= guild.name %> - Extra
			</h1>
      <a href="/servers/<%= guild.id%>"><button class="btn" style="background-color: #7289DA; color: white; margin-top: 75px; margin-left: 200px; hover: #6d7eba;">Voltar</button></a>
 
			<% if( guild.iconURL) {%>
			<img class="pfp" alt="<%= guild.name%>'s Discord Icon  " width="236" height="236" src="<%= guild.iconURL%>?size=2048" style="border-radius:50%; border:5px solid #23272A;">
			<%}else if(guild.defaultIconURL) { %>
			<img class="pfp" alt="<%= guild.name%>'s Discord Icon  " width="236" height="236" src="<%= guild.defaultIconURL%>?size=2048" style="border-radius:50%; border:5px solid #23272A;">
			<%}%>
		</div>
    <div class="jumbotron" style="border-color: #d63b3b;">
      <h1 class="text-center">
        Bans
      </h1>
      <hr class="bans">   
       <% bans.forEach(us => { %>
         <p class="nav-link disable">
          <% if(us.avatarURL) {%>
           <img src="<%= us.avatarURL%>" width="35px;" style="border-radius: 50%;">ㅤㅤㅤ<%= us.username %> - <%= bans.id %>
          <% } else { %>
           <img src="<%= us.defaultAvatarURL%>" width="35px;" style="border-radius: 50%;">ㅤㅤㅤ<%= us.username %> - <%= bans.id %>
          <% } %>
         </p> 
       <% }); %>
     </div>

     <div class="jumbotron" style="border-color: #7289DA;">
       <h1 class="text-center">
         Convites
       </h1>
        <% invites.forEach(iv => { %>
         <p class="nav-link disable">
          <% if(iv.inviter.avatarURL) {%>
           <img src="<%= iv.inviter.avatarURL%>" width="35px;" style="border-radius: 50%;">ㅤㅤㅤ<%= iv.inviter.username %> - <%= iv.uses %>
          <% } else {%>
           <img src="<%= iv.inviter.defaultAvatarURL%>" width="35px;" style="border-radius: 50%;">ㅤㅤㅤ<%= iv.inviter.username %> - <%= iv.uses %>
          <% } %>
         </p> 
        <% }); %>
     </div>

     <div class="jumbotron">

    <h1 class="text-center">
      Membros
       </h1>
			<% guild.members.map(u => { %>
         <p class="nav-link disable">
          <% if(u.user.avatarURL) {%>
           <img src="<%= u.user.avatarURL%>" width="35px;" style="border-radius: 50%;">ㅤㅤㅤ<%= u.user.username %> - <%= u.user.tag %>
          <% } else {%>
           <img src="<%= u.user.defaultAvatarURL%>" width="35px;" style="border-radius: 50%;">ㅤㅤㅤ<%= u.user.username %> - <%= u.user.tag %>
          <% } %>
         </p> 
			<% }).join("\n") %>
		</div>
    <br>
</div>